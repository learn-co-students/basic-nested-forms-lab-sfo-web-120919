<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br/>
  
    <%= f.fields_for :ingredients do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %><br/>
  
      <%= form.label :quantity %>
      <%= form.text_field :quantity %><br/>
    <% end %>
  
    <%= f.submit %>
  <% end %>